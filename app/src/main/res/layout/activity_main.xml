<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.vassar.cmpu203.plannerapp.controller.MainActivity"
    android:background="@color/cardview_dark_background">


    <ImageButton
        android:id="@+id/OptionsMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/cardview_dark_background"
        android:elevation="@dimen/cardview_default_elevation"
        android:paddingHorizontal="@dimen/cardview_default_elevation"
        android:paddingVertical="@dimen/cardview_default_elevation"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <ImageButton
        android:id="@+id/AddTask"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/cardview_dark_background"
        android:elevation="@dimen/cardview_default_elevation"
        android:paddingHorizontal="@dimen/cardview_default_elevation"
        android:paddingVertical="@dimen/cardview_default_elevation"
        android:src="@drawable/ic_baseline_add_24"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>


    <Button
        android:id="@+id/paneName"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Tasks"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/AddTask"
        app:layout_constraintStart_toEndOf="@+id/OptionsMenu"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>